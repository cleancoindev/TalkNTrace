<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/toolbar_chat"
        android:background="@color/green_600">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="50dp"
                android:layout_marginTop="10dp"
                android:layout_height="30dp"
                android:layout_marginLeft="-15dp"
                android:background="@color/transparent"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_arrow_back_white_24dp" />
            <TextView
                android:id="@+id/Name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Rutviz"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:textColor="#FFF"
                android:textSize="18dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:foreground="?android:attr/selectableItemBackground" />
        </RelativeLayout>



    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview_Chat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        app:reverseLayout="true"
        android:background="@color/dark_gray"
        android:layout_above="@+id/main_chat"
        android:layout_below="@+id/toolbar_chat"
        android:layout_alignParentStart="true" />
    <RelativeLayout
        android:id="@+id/hide_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/coordinate"></RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_chat">

        <io.codetail.widget.RevealFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:padding="0dp">

            <include layout="@layout/media_attach_menu" />

        </io.codetail.widget.RevealFrameLayout>


    </FrameLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shape"
        android:id="@+id/main_chat"
        android:layout_margin="10dp"
        android:layout_alignParentBottom="true">


        <ImageButton
            android:id="@+id/emoji"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/blue_500"
            android:foreground="?android:attr/selectableItemBackground"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_audiotrack_white_24dp" />

        <hani.momanii.supernova_emoji_library.Helper.EmojiconEditText
            android:id="@+id/editText2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="7"
            android:textSize="15dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:hint="Type Here..."
            android:textCursorDrawable="@null"
            android:textIsSelectable="false"
            android:padding="10dp"
            android:paddingLeft="50dp"
            android:layout_marginBottom="5dp"
            android:inputType="textMultiLine"
            android:background="#ffffff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true" />

        <ImageButton
            android:id="@+id/SendBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:visibility="invisible"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/blue_500"
            android:paddingLeft="3dp"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_send_white_24dp" />
        <ImageButton
            android:id="@+id/CameraBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:elevation="2dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/shape"
            android:backgroundTint="@color/blue_500"
            android:scaleType="center"
            app:srcCompat="@drawable/ic_camera_white_24dp" />

    </RelativeLayout>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/coordinate"
        android:layout_marginBottom="-200dp"
        android:layout_alignParentBottom="true">
        <android.support.v4.widget.NestedScrollView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="100dp"
            app:layout_behavior="@string/bottom_sheet_behavior">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/contact_img"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:layout_marginLeft="10dp"
                    app:srcCompat="@drawable/contact_icon"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="10dp" />

                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:textAlignment="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contact_name"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="50dp"
                        android:text="Rutviz"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/contact_no"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="17dp"
                        android:text="91046 79214"
                        android:textColor="@color/grey_600"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_below="@+id/contact_name"
                        android:layout_alignParentStart="true" />


                </RelativeLayout>

            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>